<p id="notice"><%= notice %></p>

<h1>Ingressos</h1>

<table>
  <thead>
    <tr>
      <th>Sessao</th>
      <th>Cliente</th>
      <th>Tipo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @ingressos.each do |ingresso| %>
      <tr>
        <td><%= ingresso.sessao_id %></td>
        <td><%= ingresso.cliente %></td>
        <td><%= ingresso.tipo %></td>
        <td><%= link_to 'Show', ingresso %></td>
        <td><%= link_to 'Edit', edit_ingresso_path(ingresso) %></td>
        <td><%= link_to 'Destroy', ingresso, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

