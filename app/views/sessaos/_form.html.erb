<%= form_for(sessao) do |f| %>
  <% if sessao.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(sessao.errors.count, "error") %> prohibited this sessao from being saved:</h2>

      <ul>
      <% sessao.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :cinema_id %>
    <% cinema_array = Cinema.all.map { |cinema| [cinema.nome, cinema.id] } %>
    <%= f.select(:cinema_id, options_for_select(cinema_array, :selected => f.object.cinema_id)) %>
  </div>

  <div class="field">
    <%= f.label :filme_id %>
    <% filme_array = Filme.all.map { |filme| [filme.nome, filme.id] } %>
    <%= f.select(:filme_id, options_for_select(filme_array, :selected => f.object.filme_id)) %>
  </div>

  <div class="field">
    <%= f.label :inicio %>
    <%= f.text_field :inicio %>
  </div>

  <div class="field">
    <%= f.label :sala %>
    <%= f.number_field :sala %>
  </div>

  <div class="field">
    <%= f.label :tipo %>
    <%= f.select :tipo, ['XD', '3D', '2D'] %>
  </div>

  <div class="field">
    <%= f.label :cadeiras %>
    <%= f.number_field :cadeiras %>
  </div>

  <div class="field">
    <%= f.label :valor %>
    <%= f.text_field :valor %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
