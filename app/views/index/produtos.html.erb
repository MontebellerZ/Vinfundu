<div id="loja" class="container">
    <div class="row justify-content-center">
        <div class="col-4 center">
            <% if @bombonieres.count==0 %>
                <i class="far fa-sad-tear"></i>
                <h3>Estamos sem produtos por enquanto</h3>
            <% end %>
        </div>
    </div>
    
    <div class="row justify-content-center imgs">
        
        <div class="col-6 container">
            
            <div class="row justify-content-center">
                <div class="col-9">
                    <%= image_tag 'cardapio_logo.png' %>
                </div>
            </div>
            
            <% i=0 %>
            <% j=0 %>
            <% @bombonieres.each do |bomboniere| %>
                <% j+=1 %>
                <% if bomboniere.limitado==false %>
                    <% i+=1 %>
                    <% if i%2==1 %>
                        <div class="row justify-content-center">
                    <% end %>
                            <div class="col-5 produto">
                                <div class="foto">
                                    <%= image_tag bomboniere.imagem %>
                                </div>
                                <div class="desc">
                                    <%= bomboniere.produto %>
                                    <div class="valor">R$<%= bomboniere.valor %></div>
                                </div>
                            </div>
                    <% if i%2==0 %>
                        </div>
                    <% end %>
                <% end %>
                <% if (j==@bombonieres.count && i%2==1) %>
                    </div>
                <% end %>
            <% end %>
            
        </div>
        
        <div class="col-6 container">
            
            <div class="row justify-content-center">
                <div class="col-9">
                    <%= image_tag 'combos.png' %>
                </div>
            </div>
                
            <% i=0 %>
            <% j=0 %>
            <% @bombonieres.each do |bomboniere| %>
                <% j+=1 %>
                <% if bomboniere.limitado==true %>
                    <% i+=1 %>
                    <% if i%2==1 %>
                        <div class="row justify-content-center">
                    <% end %>
                            <div class="col-5 produto">
                                <div class="foto">
                                    <%= image_tag bomboniere.imagem %>
                                </div>
                                <div class="desc">
                                    <%= bomboniere.produto %>
                                    <div class="valor">R$<%= bomboniere.valor %></div>
                                </div>
                            </div>
                    <% if i%2==0 %>
                        </div>
                    <% end %>
                <% end %>
                <% if (j==@bombonieres.count && i%2==1) %>
                    </div>
                <% end %>
            <% end %>
            
        </div>
        
    </div>
    
</div>